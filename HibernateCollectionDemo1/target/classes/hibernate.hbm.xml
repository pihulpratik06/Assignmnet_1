<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "  classpath://org/hibernate/hibernate-configuration-3.0.dtd"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver-class">com.mysql.jdbc.Driver</property>
        <!-- property name="connection.driver_class">com.mysql.jdbc.Driver</property -->
        <property name="connection.url">jdbc:mysql://localhost:3306/Collection_Database1</property>

        <property name="dialect">

            org.hibernate.dialect.MySQL5Dialect

        </property>
        <property name="connection.username">root

        </property>

        <property name="connection.password">root

        </property>



        <!--property name="dialect">org.hibernate.dialect.MySQLDialect</property-->

        <property name="show_sql">true

        </property>

        <property name="hbm2ddl.auto">update

        </property>


        <mapping resource="movie.hbm.xml" />
    </session-factory>
</hibernate-configuration>